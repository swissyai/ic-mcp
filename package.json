{
  "name": "ic-mcp",
  "version": "0.9.4",
  "description": "Model Context Protocol server for Internet Computer development with natural language tools and TOON encoding",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "ic-mcp": "dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "postbuild": "chmod +x dist/index.js",
    "prepublishOnly": "npm run build",
    "dev": "tsx src/index.ts",
    "start": "node dist/index.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:integration": "vitest run tests/integration",
    "test:unit": "vitest run tests/unit",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "mcp",
    "internet-computer",
    "icp",
    "motoko",
    "rust",
    "candid",
    "dfinity",
    "model-context-protocol",
    "toon",
    "natural-language",
    "ai-agent",
    "claude-code"
  ],
  "author": "swissyai (https://x.com/swissyai)",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/swissyai/ic-mcp.git"
  },
  "devDependencies": {
    "@types/node": "^24.9.1",
    "@types/turndown": "^5.0.6",
    "@vitest/ui": "^4.0.2",
    "gpt-tokenizer": "^3.2.0",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "vitest": "^4.0.2"
  },
  "dependencies": {
    "@byjohann/toon": "^0.3.1",
    "@modelcontextprotocol/sdk": "^1.20.1",
    "@octokit/rest": "^22.0.0",
    "cheerio": "^1.1.2",
    "node-fetch": "^3.3.2",
    "turndown": "^7.2.1",
    "zod": "^3.25.76",
    "zod-to-json-schema": "^3.24.6"
  }
}
